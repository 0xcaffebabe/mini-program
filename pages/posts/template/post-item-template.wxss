.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom:40rpx;
  padding-bottom: 10rpx;
  
}
.post-author {
  margin: 10rpx 0 20rpx 20rpx;
}
.post-author image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.post-author text {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}
.post-title {
  padding: 0 20rpx;
  padding-bottom: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}
.post-img-wrapper {
  position: relative;
  padding: 0 20rpx;
}
.post-img {
  width:100%;
  height:400rpx;
  border-radius: 15rpx;
  box-shadow: 2rpx 6rpx 13rpx rgba(0,0,0,.3);
}
.post-info {
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
}
.post-info {
  color: white;
}
.post-info text {
  margin-left: 20rpx;
  padding-right: 20rpx;
  vertical-align: middle;
}
.post-icon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle
}